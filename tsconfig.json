{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "skipLibCheck": true,
    "checkJs": false
  },
  "include": [
      "./dist/types/**/*"
  ],
  "exclude": ["node_modules", "dist"] 
}
